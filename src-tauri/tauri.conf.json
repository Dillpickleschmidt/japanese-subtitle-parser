{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "japanese-subtitle-search",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "center": true
      },
      "fs": {
        "scope": ["$RESOURCE/*", "$RESOURCE/data/transcripts_raw/*"]
      }
    },
    "windows": [
      {
        "title": "japanese-subtitle-search",
        "width": 1400,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.japanese-subtitle-search.app",
      "resources": [
        "data/transcripts_raw/**/*",
        "jmdict.sqlite",
        "transcripts.db"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "ja-JP"
        }
      }
    }
  }
}
