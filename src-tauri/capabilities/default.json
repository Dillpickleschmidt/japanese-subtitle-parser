{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    },
    "core:window:allow-center",
    "shell:allow-open",
    "dialog:allow-open",
    "shell:default",
    "dialog:default",
    "fs:default"
  ]
}
